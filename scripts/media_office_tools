function fm-pdf_viewer
{
	local app=evince
	local default_opt=
	which ${app} > /dev/null
	if [ $? -ne 0 ] ; then echo ¨${app} not exist!¨;return 1;fi;
	
	$app ${default_opt} $*

	return 0
}

function fm-picture_viewer
{
	local app=gpicview
	local default_opt=
	which ${app} > /dev/null
	if [ $? -ne 0 ];then echo ¨${app} not exist!¨;return 1;fi;

	$app ${default_opt} $*
	return 0
}

function fm-movie_viewer
{
	local app=mpv
	#local default_opt=¨--player-operation-mode=pseudo-gui¨
	local default_opt=
	
	which ${app} > /dev/null
	if [ $? -ne 0 ];then echo ¨${app} not exist!¨;return 1;fi;

	$app ${default_opt} $*
	return 0
}
